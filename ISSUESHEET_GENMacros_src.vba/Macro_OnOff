Sub macrosOn()
'///Assigned to "On" cell on various sheets////////////////////////////////////////////////////////////////////////////////
'///Turns on Macros////////////////////////////////////////////////////////////////////////////////////////////////////////

    Range("AD1").Value = "On"
    Range("AD2").Value = "On"
    Range("AD3").Value = "On"
    Range("AD4").Value = "On"
    Range("AD5").Value = "On"
    
End Sub


Sub macrosOff()
'///Assigned to "Off" cell on various sheets///////////////////////////////////////////////////////////////////////////////
'///Turns off Macros///////////////////////////////////////////////////////////////////////////////////////////////////////

    Range("AD1").Value = "Off"
    Range("AD2").Value = "Off"
    Range("AD3").Value = "Off"
    Range("AD4").Value = "Off"
    Range("AD5").Value = "Off"
    
End Sub